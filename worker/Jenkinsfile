pipeline {
	agent {
		docker {
			image 'maven:3.6.1-jdk-8-slim'
			args '-v $HOME/.m2:/root/.m2'
		}
	}

	stages{
		stage("build"){
			steps{
				echo 'Building & Compiling l application worker JAVA'
				dir('worker'){
					sh 'mvn compile'
				}
			}
		}

		stage("test"){
			steps{
				echo 'Lancement de Unit Tests dans l application worker JAVA'
				dir('worker'){
					sh 'mvn clean test'
				}
			}
		}

		stage("package"){
			steps{
				echo 'Packaging worker app dans un fichier .jar'
				dir('worker'){
					sh 'mvn package -DskipTests'
					archiveArtifacts artifacts: '**/target/*.jar',
					fingerprint: true
				}
			}
		}
		
		stage('docker-package'){
			agent any
			steps{
				echo 'Packaging de l application worker JAVA avec docker'
				script{
					docker.withRegistry('https://index.docker.io/v1/', 'dockerlogin') {
						def workerImage = docker.build("adrien6910/worker:v${env.BUILD_ID}", "./worker")
						workerImage.push()
						workerImage.push("latest")
					}
				}
			}
		}	

	}

	post{
		always{
			echo 'Le job est termin√© ..'
		}
	}
}
